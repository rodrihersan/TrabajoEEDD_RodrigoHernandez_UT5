	public static int leerInt(BufferedReader leer) throws IOException {
		int num = 0;
		boolean valido = false;

		while (!valido) {
			try {
				num = Integer.parseInt(leer.readLine());
				valido = true;
			} catch (NumberFormatException e) {
				System.out.print("ERROR. Introduce un n�mero v�lido: ");
			}
		}
		return num;
	}
}
